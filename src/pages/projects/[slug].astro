---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchFeaturedReposWithPortfolio, getRepoSlug, getLanguageColor, categoryLabels } from '../../lib/github';
import type { GitHubRepo } from '../../lib/github';
import { marked } from 'marked';

export async function getStaticPaths() {
  const featuredRepos = await fetchFeaturedReposWithPortfolio();

  return featuredRepos.map((repo) => ({
    params: { slug: getRepoSlug(repo) },
    props: { repo },
  }));
}

interface Props {
  repo: GitHubRepo;
}

const { repo } = Astro.props;
const slug = getRepoSlug(repo);
const hasPortfolio = repo.has_portfolio && repo.portfolio;

// Convert markdown to HTML for portfolio content
const architectureHtml = hasPortfolio && repo.portfolio?.architecture
  ? await marked.parse(repo.portfolio.architecture)
  : '';
const stackHtml = hasPortfolio && repo.portfolio?.stack
  ? await marked.parse(repo.portfolio.stack)
  : '';
const qaHtml = hasPortfolio && repo.portfolio?.qa
  ? await marked.parse(repo.portfolio.qa)
  : '';

// Determine which tabs to show
const tabs = [];
if (architectureHtml) tabs.push({ id: 'architecture', label: 'Architecture', icon: 'grid' });
if (stackHtml) tabs.push({ id: 'stack', label: 'Tech Stack', icon: 'layers' });
if (qaHtml) tabs.push({ id: 'about', label: 'About', icon: 'help' });
---

<BaseLayout
  title={repo.name.replace(/-/g, ' ').replace(/\b\w/g, (l) => l.toUpperCase())}
  description={repo.description || `Case study for ${repo.name}`}
>
  <!-- Hero Section -->
  <section class="section pt-8 pb-4">
    <div class="container-narrow">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center gap-2 text-sm" style="color: var(--text-muted);">
          <li><a href="/projects" class="hover:underline">Projects</a></li>
          <li>/</li>
          <li style="color: var(--text-secondary);">{repo.name}</li>
        </ol>
      </nav>

      <!-- Title & Meta -->
      <div class="mb-8">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          {repo.metadata?.category && (
            <span class="tag-teal">
              {categoryLabels[repo.metadata.category] || repo.metadata.category}
            </span>
          )}
          {repo.private && (
            <span class="tag-red">Private Project</span>
          )}
        </div>

        <h1 class="text-4xl md:text-5xl font-display font-bold mb-4" style="color: var(--text-heading);">
          {repo.name.replace(/-/g, ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())}
        </h1>

        <p class="text-xl" style="color: var(--text-secondary);">
          {repo.description}
        </p>
      </div>

      <!-- Quick Info -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        {repo.metadata?.role && (
          <div class="card" style="padding: 1rem;">
            <div class="text-xs uppercase tracking-wider mb-1" style="color: var(--text-muted);">Role</div>
            <div class="font-medium" style="color: var(--text-heading);">{repo.metadata.role}</div>
          </div>
        )}
        {repo.metadata?.duration && (
          <div class="card" style="padding: 1rem;">
            <div class="text-xs uppercase tracking-wider mb-1" style="color: var(--text-muted);">Duration</div>
            <div class="font-medium" style="color: var(--text-heading);">{repo.metadata.duration}</div>
          </div>
        )}
        <div class="card" style="padding: 1rem;">
          <div class="text-xs uppercase tracking-wider mb-1" style="color: var(--text-muted);">Languages</div>
          <div class="font-medium" style="color: var(--text-heading);">{repo.languages.length}</div>
        </div>
        <div class="card" style="padding: 1rem;">
          <div class="text-xs uppercase tracking-wider mb-1" style="color: var(--text-muted);">Last Updated</div>
          <div class="font-medium" style="color: var(--text-heading);">
            {new Date(repo.pushed_at).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex flex-wrap gap-4">
        {!repo.private && (
          <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="mr-2">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        )}
        {repo.homepage && (
          <a href={repo.homepage} target="_blank" rel="noopener noreferrer" class="btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="2" y1="12" x2="22" y2="12"/>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
            </svg>
            Live Demo
          </a>
        )}
      </div>
    </div>
  </section>

  <!-- Tabbed Portfolio Content -->
  {tabs.length > 0 && (
    <section class="section pt-0">
      <div class="container-narrow">
        <!-- Tab Navigation -->
        <div class="tab-nav flex border-b mb-0" style="border-color: var(--border-color);">
          {tabs.map((tab, index) => (
            <button
              class={`tab-btn flex items-center gap-2 px-6 py-4 font-medium transition-colors ${index === 0 ? 'active' : ''}`}
              data-tab={tab.id}
            >
              {tab.icon === 'grid' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <line x1="3" y1="9" x2="21" y2="9"/>
                  <line x1="9" y1="21" x2="9" y2="9"/>
                </svg>
              )}
              {tab.icon === 'layers' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 2 7 12 12 22 7 12 2"/>
                  <polyline points="2 17 12 22 22 17"/>
                  <polyline points="2 12 12 17 22 12"/>
                </svg>
              )}
              {tab.icon === 'help' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                  <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
              )}
              {tab.label}
            </button>
          ))}
        </div>

        <!-- Tab Content -->
        <div class="tab-content rounded-b-lg" style="background: var(--bg-card); border: 1px solid var(--border-color); border-top: none;">
          {architectureHtml && (
            <div class="tab-panel p-6 md:p-8" data-panel="architecture">
              <div class="prose prose-lg max-w-none portfolio-content" set:html={architectureHtml} />
            </div>
          )}
          {stackHtml && (
            <div class="tab-panel p-6 md:p-8 hidden" data-panel="stack">
              <div class="prose prose-lg max-w-none portfolio-content" set:html={stackHtml} />
            </div>
          )}
          {qaHtml && (
            <div class="tab-panel p-6 md:p-8 hidden" data-panel="about">
              <div class="prose prose-lg max-w-none portfolio-content" set:html={qaHtml} />
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Tech Stack (only show if no portfolio content at all) -->
  {!hasPortfolio && (
    <section class="section" style="background-color: var(--bg-surface);">
      <div class="container-narrow">
        <h2 class="section-title">Tech Stack</h2>
        <div class="flex flex-wrap gap-3">
          {repo.languages.map((lang) => (
            <span
              class="inline-flex items-center gap-2 px-4 py-2 rounded-lg"
              style="background-color: var(--bg-card); border: 1px solid var(--border-color);"
            >
              <span
                class="w-3 h-3 rounded-full"
                style={`background-color: ${getLanguageColor(lang)};`}
              />
              <span style="color: var(--text-primary);">{lang}</span>
            </span>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Highlights -->
  {repo.metadata?.highlights && repo.metadata.highlights.length > 0 && (
    <section class="section">
      <div class="container-narrow">
        <h2 class="section-title">Key Highlights</h2>
        <div class="grid gap-4 md:grid-cols-2">
          {repo.metadata.highlights.map((highlight) => (
            <div class="card card-hover flex items-start gap-4">
              <div
                class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0"
                style="background-color: rgba(74, 155, 155, 0.1);"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  style="color: var(--accent-secondary);"
                >
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
              </div>
              <p style="color: var(--text-secondary);">{highlight}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Back to Projects -->
  <section class="section">
    <div class="container-narrow text-center">
      <a href="/projects" class="btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
          <line x1="19" y1="12" x2="5" y2="12"/>
          <polyline points="12 19 5 12 12 5"/>
        </svg>
        Back to All Projects
      </a>
    </div>
  </section>

  <!-- Tab Switching Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tabBtns = document.querySelectorAll('.tab-btn');
      const tabPanels = document.querySelectorAll('.tab-panel');

      tabBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const tabId = btn.getAttribute('data-tab');

          // Update active tab button
          tabBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');

          // Show corresponding panel
          tabPanels.forEach(panel => {
            if (panel.getAttribute('data-panel') === tabId) {
              panel.classList.remove('hidden');
            } else {
              panel.classList.add('hidden');
            }
          });
        });
      });
    });
  </script>

  <!-- Mermaid Diagram Rendering -->
  {architectureHtml && (
    <script>
      import mermaid from 'mermaid';

      mermaid.initialize({
        startOnLoad: false,
        theme: 'dark',
        themeVariables: {
          primaryColor: '#4A9B9B',
          primaryTextColor: '#F5F5DC',
          primaryBorderColor: '#4A9B9B',
          lineColor: '#6B7280',
          secondaryColor: '#1a1a2e',
          tertiaryColor: '#0d0d1a',
          background: '#0d0d1a',
          mainBkg: '#1a1a2e',
          secondBkg: '#0d0d1a',
          border1: '#4A9B9B',
          border2: '#C41E3A',
          arrowheadColor: '#F5F5DC',
          fontFamily: 'JetBrains Mono, monospace',
          fontSize: '14px',
          textColor: '#F5F5DC',
          nodeTextColor: '#F5F5DC',
        },
      });

      // Find all mermaid code blocks and render them
      document.addEventListener('DOMContentLoaded', async () => {
        const codeBlocks = document.querySelectorAll('pre code.language-mermaid, pre code');

        for (const block of codeBlocks) {
          const text = block.textContent || '';
          // Check if it looks like mermaid syntax
          if (text.trim().startsWith('flowchart') ||
              text.trim().startsWith('sequenceDiagram') ||
              text.trim().startsWith('classDiagram') ||
              text.trim().startsWith('erDiagram') ||
              text.trim().startsWith('graph') ||
              text.trim().startsWith('stateDiagram') ||
              text.trim().startsWith('pie') ||
              text.trim().startsWith('gantt')) {

            const pre = block.parentElement;
            if (!pre) continue;

            // Create wrapper with zoom controls
            const wrapper = document.createElement('div');
            wrapper.className = 'mermaid-wrapper my-6 relative';

            // Create zoom controls
            const controls = document.createElement('div');
            controls.className = 'mermaid-controls absolute top-2 right-2 flex gap-1 z-10';
            controls.innerHTML = `
              <button class="zoom-btn zoom-out" title="Zoom out" aria-label="Zoom out">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"/>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                  <line x1="8" y1="11" x2="14" y2="11"/>
                </svg>
              </button>
              <button class="zoom-btn zoom-reset" title="Reset zoom" aria-label="Reset zoom">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
                  <path d="M3 3v5h5"/>
                </svg>
              </button>
              <button class="zoom-btn zoom-in" title="Zoom in" aria-label="Zoom in">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"/>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                  <line x1="11" y1="8" x2="11" y2="14"/>
                  <line x1="8" y1="11" x2="14" y2="11"/>
                </svg>
              </button>
            `;

            // Create diagram container
            const container = document.createElement('div');
            container.className = 'mermaid-diagram overflow-auto rounded-lg';
            container.style.cssText = 'max-height: 600px; background: var(--bg-surface); border: 1px solid var(--border-color); padding: 1rem;';

            // Inner container for scaling
            const inner = document.createElement('div');
            inner.className = 'mermaid-inner';
            inner.style.cssText = 'transform-origin: top left; transition: transform 0.2s ease;';

            try {
              const { svg } = await mermaid.render(`mermaid-${Math.random().toString(36).slice(2)}`, text);
              inner.insertAdjacentHTML('beforeend', svg);

              container.appendChild(inner);
              wrapper.appendChild(controls);
              wrapper.appendChild(container);
              pre.replaceWith(wrapper);

              // Zoom functionality
              let scale = 1;
              const minScale = 0.5;
              const maxScale = 3;
              const scaleStep = 0.25;

              const updateScale = () => {
                inner.style.transform = `scale(${scale})`;
              };

              controls.querySelector('.zoom-in')?.addEventListener('click', () => {
                scale = Math.min(maxScale, scale + scaleStep);
                updateScale();
              });

              controls.querySelector('.zoom-out')?.addEventListener('click', () => {
                scale = Math.max(minScale, scale - scaleStep);
                updateScale();
              });

              controls.querySelector('.zoom-reset')?.addEventListener('click', () => {
                scale = 1;
                updateScale();
              });

            } catch (e) {
              console.warn('Failed to render mermaid diagram:', e);
            }
          }
        }
      });
    </script>
  )}

  <style>
    /* Tab Styles */
    .tab-btn {
      color: var(--text-muted);
      border-bottom: 2px solid transparent;
      margin-bottom: -1px;
    }

    .tab-btn:hover {
      color: var(--text-secondary);
      background: var(--bg-surface);
    }

    .tab-btn.active {
      color: var(--accent-secondary);
      border-bottom-color: var(--accent-secondary);
      background: var(--bg-card);
    }

    .tab-panel {
      min-height: 400px;
    }

    /* Mermaid Styles */
    .mermaid-wrapper {
      position: relative;
    }

    .mermaid-controls {
      opacity: 0.7;
      transition: opacity 0.2s;
    }

    .mermaid-wrapper:hover .mermaid-controls {
      opacity: 1;
    }

    .zoom-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      background: var(--bg-surface);
      border: 1px solid var(--border-color);
      border-radius: 6px;
      color: var(--text-secondary);
      cursor: pointer;
      transition: all 0.2s;
    }

    .zoom-btn:hover {
      background: var(--bg-card);
      color: var(--accent-secondary);
      border-color: var(--accent-secondary);
    }

    .zoom-btn:active {
      transform: scale(0.95);
    }

    .mermaid-diagram {
      cursor: grab;
    }

    .mermaid-diagram:active {
      cursor: grabbing;
    }
  </style>
</BaseLayout>
