---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with Jacob Kanfer">
  <section class="section pt-8">
    <div class="container-narrow">
      <div class="grid lg:grid-cols-[1fr_300px] gap-8">
        <!-- Contact Form -->
        <div class="card">
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            id="contact-form"
            class="space-y-6"
          >
            <input type="hidden" name="access_key" value="e96fc736-cc52-4b49-a99d-3a3187fb6f89" />
            <input type="hidden" name="subject" value="New Contact Form Submission from jacobkanfer.com" />

            <div>
              <label for="name" class="block text-sm font-display mb-2" style="color: var(--text-secondary);">
                Name <span style="color: var(--accent-primary);">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Your Name"
                class="w-full px-4 py-3 rounded-lg transition-colors"
                style="background-color: var(--bg-surface); border: 1px solid var(--border-color); color: var(--text-primary);"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-display mb-2" style="color: var(--text-secondary);">
                Email <span style="color: var(--accent-primary);">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="your.email@example.com"
                class="w-full px-4 py-3 rounded-lg transition-colors"
                style="background-color: var(--bg-surface); border: 1px solid var(--border-color); color: var(--text-primary);"
              />
            </div>

            <div>
              <label for="subject-field" class="block text-sm font-display mb-2" style="color: var(--text-secondary);">
                Subject
              </label>
              <input
                type="text"
                id="subject-field"
                name="subject-field"
                placeholder="What's this about?"
                class="w-full px-4 py-3 rounded-lg transition-colors"
                style="background-color: var(--bg-surface); border: 1px solid var(--border-color); color: var(--text-primary);"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-display mb-2" style="color: var(--text-secondary);">
                Message <span style="color: var(--accent-primary);">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                placeholder="Tell me about your project or inquiry..."
                class="w-full px-4 py-3 rounded-lg transition-colors resize-none"
                style="background-color: var(--bg-surface); border: 1px solid var(--border-color); color: var(--text-primary);"
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full">
              Send Message
            </button>

            <div id="form-status" class="text-center text-sm"></div>
          </form>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="space-y-6">
          <div class="card">
            <h3 class="font-display font-bold mb-4" style="color: var(--text-heading);">Direct Contact</h3>
            <div class="space-y-4">
              <a
                href="mailto:jacobkanfer8@gmail.com"
                class="flex items-center gap-3 transition-colors"
                style="color: var(--text-secondary);"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent-primary);">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <div>
                  <p class="text-xs" style="color: var(--text-muted);">Email</p>
                  <p>jacobkanfer8@gmail.com</p>
                </div>
              </a>

              <a
                href="https://www.linkedin.com/in/jacob-kanfer/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 transition-colors"
                style="color: var(--text-secondary);"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent-secondary);">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                  <rect x="2" y="9" width="4" height="12"/>
                  <circle cx="4" cy="4" r="2"/>
                </svg>
                <div>
                  <p class="text-xs" style="color: var(--text-muted);">LinkedIn</p>
                  <p>/in/jacob-kanfer</p>
                </div>
              </a>

              <a
                href="https://github.com/Technical-1"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 transition-colors"
                style="color: var(--text-secondary);"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="color: var(--accent-primary);">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <div>
                  <p class="text-xs" style="color: var(--text-muted);">GitHub</p>
                  <p>@Technical-1</p>
                </div>
              </a>
            </div>
          </div>

          <div class="card">
            <h3 class="font-display font-bold mb-2" style="color: var(--text-heading);">Response Time</h3>
            <p class="text-sm" style="color: var(--text-muted);">
              I typically respond within 24-48 hours during business days.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form');
  const formStatus = document.getElementById('form-status');

  if (form && formStatus) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      formStatus.textContent = 'Sending...';
      formStatus.style.color = 'var(--accent-secondary)';

      const formData = new FormData(form as HTMLFormElement);

      try {
        const response = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: formData
        });

        const data = await response.json();

        if (data.success) {
          formStatus.textContent = "Message sent successfully! I'll get back to you soon.";
          formStatus.style.color = 'var(--accent-secondary)';
          (form as HTMLFormElement).reset();
        } else {
          formStatus.textContent = 'Something went wrong. Please try emailing me directly.';
          formStatus.style.color = 'var(--accent-primary)';
        }
      } catch (error) {
        formStatus.textContent = 'Network error. Please try again or email me directly.';
        formStatus.style.color = 'var(--accent-primary)';
      }
    });
  }
</script>
